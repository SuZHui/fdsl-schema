{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "directory"],
  "properties": {
    "name": { "type": "string" },
    "git": { 
      "type": "object",
      "required": [ "url", "branch" ],
      "properties": {
        "url": { "type": "string" },
        "branch": { "type": "string", "default": "master" }
      }
    },
    "directory": {
      "type": "object",
      "required": [ "view" ],
      "properties": {
        "view": { "type": "string" },
        "api": { "type": "string" },
        "component": { "type": "string" }
      }
    }
  }
}