{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "name",
    "directory",
    "output"
  ],
  "properties": {
    "name": {
      "type": "string", "description": "项目名称"
    },
    "git": {
      "type": "object",
      "description": "git 地址",
      "required": [
        "url",
        "branch"
      ],
      "properties": {
        "url": {
          "type": "string"
        },
        "branch": {
          "type": "string",
          "default": "master"
        }
      }
    },
    "output": {
      "type": "object", "description": "输出配置项", "required": ["root"], "properties": {
        "root": { "type": "string", "description": "项目根路径"},
        "view": { "type": "string", "description": "路由页面文件夹"},
        "api": { "type": "string", "description": "接口文件夹"},
        "component": { "type": "string", "description": "公共组件文件夹"}
      }
    }
  }
}